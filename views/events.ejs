<!DOCTYPE html>
<html>
<head>
    <title>Events | IT Tech Club</title>

    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

<%- include('partials/navbar') %>

<!-- Hero Section -->
<section class="events-hero text-center text-white d-flex align-items-center">
    <div class="container">
        <h1>Upcoming Events ðŸš€</h1>
        <p class="lead">Innovate â€¢ Compete â€¢ Grow</p>
    </div>
</section>

<div class="container py-5">

    <!-- Stats Section -->
    <div class="row text-center mb-5 reveal">
        <div class="col-md-4">
            <div class="stat-card">
                <h2 id="eventCount">0</h2>
                <p>Total Events</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h2 id="registeredCount">0</h2>
                <p>Registrations</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h2>2025</h2>
                <p>Active Year</p>
            </div>
        </div>
    </div>

    <!-- Events Cards -->
    <div class="row">

        <% if(events.length === 0) { %>
            <p class="text-center text-white">No events available.</p>
        <% } %>

        <% events.forEach(event => { %>

        <div class="col-md-4 mb-4 reveal">
            <div class="event-card h-100 p-4">

                <h5 class="fw-bold"><%= event.event_name %></h5>
                <p><%= event.description %></p>

                <ul class="list-unstyled small">
                    <li><strong>Date:</strong> <%= new Date(event.date).toDateString() %></li>
                    <li><strong>Time:</strong> <%= event.time %></li>
                    <li><strong>Venue:</strong> <%= event.venue %></li>
                </ul>

                <% if(user) { %>
                <form method="POST" action="/events/register/<%= event.event_id %>">
                    <button type="submit" class="btn btn-info w-100 mt-2">
                        Register
                    </button>
                </form>
                <% } else { %>
                <a href="/login" class="btn btn-outline-info w-100 mt-2">
                    Login to Register
                </a>
                <% } %>

            </div>
        </div>

        <% }) %>

    </div>

    <!-- Chart Section -->
    <div class="row mt-5 reveal">
        <div class="col-md-12">
            <div class="chart-card p-4">
                <h5 class="fw-bold mb-3">ðŸ“ˆ Event Analytics</h5>
                <canvas id="eventChart"></canvas>
            </div>
        </div>
    </div>

</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/events.js"></script>
<script src="/js/reveal.js"></script>

</body>
</html>