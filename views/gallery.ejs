    </div>
</section>

<div class="container py-5">

    <div class="row">

        <% for(let i = 1; i <= 6; i++) { %>

        <div class="col-md-4 col-sm-6 mb-4 reveal">
            <div class="gallery-item">
                <img src="/images/sample<%= i %>.jpg"
