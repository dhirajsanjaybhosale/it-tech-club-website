<!DOCTYPE html>
<html>
<head>
    <title>IT Tech Club</title>

    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
</head>

<body>

<%- include('partials/navbar') %>

<!-- ================= HERO SECTION ================= -->
<section class="hero">
    <div class="hero-overlay">
        <div data-aos="fade-up">
            <h1 class="hero-title typing-text">Welcome to IT Tech Club</h1>
            <p class="hero-subtitle">Innovate â€¢ Learn â€¢ Build ðŸš€</p>
            <a href="#about" class="hero-btn">Explore More</a>
        </div>
    </div>
</section>

<!-- ================= ABOUT SECTION ================= -->
<section id="about" class="section-dark">
    <div class="container text-center" data-aos="fade-right">
        <h2 class="section-title">About Us</h2>
        <p class="section-text">
            IT Tech Club is a community of passionate developers, innovators,
            and tech enthusiasts. We organize workshops, hackathons,
            coding competitions and technical events.
        </p>
    </div>
</section>

<!-- ================= EVENTS SECTION ================= -->
<section id="events" class="section-light">
    <div class="container">
        <h2 class="section-title text-center" data-aos="zoom-in">
            Upcoming Events
        </h2>

        <div class="row mt-5">

            <% if (events && events.length > 0) { %>

                <% events.forEach(event => { %>
                    <div class="col-md-4 mb-4" data-aos="fade-up">
                        <div class="event-card">
                            <h4><%= event.event_name %></h4>
                            <p><%= event.description %></p>
                            <span class="event-date">
                                <%= new Date(event.date).toDateString() %>
                            </span>
                        </div>
                    </div>
                <% }) %>

            <% } else { %>

                <div class="col-12 text-center">
                    <p>No upcoming events available.</p>
                </div>

            <% } %>

        </div>
    </div>
</section>

<%- include('partials/footer') %>

<!-- AOS Only (Not in footer) -->
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>

</body>
</html>
